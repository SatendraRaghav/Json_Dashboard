{
    "type": "HorizontalLayout",
    "elements": [
        {
            "type": "Control",
            "scope": "#/properties/Appbar",
            "layout":12,
            "option": {
                "value": {
                    "content": {
                        "eventName": "submitForm",
                        "ButtonName":"Sign In"
                    }}
        }},
        {
            "type": "Control",
            "scope": "#/properties/emailInput",
            "layout":{"xs":12,"sm":12,"md":12,"lg":12},
            "option": {
                "value": {
                    "content": {
                        "label": "Enter your username",
                        "required": true,
                        "type": "text",
                        "variant": "filled",
                        "size":"normal",
                       "helperText":""
                    },
                    "style": {
                        "width":"50%",
                        "marginTop":"10vh"
                    }
                }
            }
        },
        {
            "type": "Control",
            "scope": "#/properties/passwordInput",
            "layout":{"xs":12,"sm":12,"md":12,"lg":12},
            "option": {
                "value": {
                    "content": {
                        "label": "Enter your password",
                        "required": true,
                        "type": "password",
                        "variant": "filled",
                        "size":"normal",
                       "helperText":""
                    },
                    "style": {
                        "width":"50%",
                        "margin":"20px auto"
                    }
                }
            }
        },
        {
            "type": "Control",
            "scope": "#/properties/Button",
            "layout":{"xs":12,"sm":12,"md":12,"lg":12},
            "option": {
                "value": {
                    "content": {
                        "name": "Log In",
                        "variant": "contained",
                        "color": "info",
                        "eventName": "submitForm",
                        "type": "text",
                        "size": "medium"
                    },
                    "style": {
                        "width":"50%"
                    }
                }
            }
        }
    ]
